<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarSize="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_icon_bar_shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--<ImageView
            android:id="@+id/menu_icon_bar_shadow_solid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color1"
            android:layout_marginTop="10dp"/>-->

            <View
                android:id="@+id/menu_icon_bar_shadow_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/primaryColor"/>

            <ImageView
                android:id="@+id/menu_icon_bar_shadow_2"
                android:layout_below="@id/menu_icon_bar_shadow_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/shadowc"
                android:scaleType="fitCenter"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:src="@drawable/shadowb"
                android:scaleType="fitXY"
                android:layout_below="@id/menu_icon_bar_shadow_1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_main_drop_down_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="30dp"
        android:visibility="visible">

                <View
                    android:id="@+id/button_reload_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/color3"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"/>


                <View
                    android:id="@+id/button_back_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/color3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <View
                    android:id="@+id/button_pref_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/color3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/button_reload"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:onClick="layoutClicked"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@color/transparent"/>

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/button_pref"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:onClick="layoutClicked"/>
        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/button_back"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:onClick="layoutClicked"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/button01"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/button_back_image"
            android:layout_marginTop="38dp"
            android:onClick="layoutClicked"
            android:text="Montag"
            android:background="@color/transparent"
            android:textColor="@color/color3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/button02"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/button01"
            android:onClick="layoutClicked"
            android:text="Dienstag"
            android:background="@color/transparent"
            android:textColor="@color/color3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/button03"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/button02"
            android:onClick="layoutClicked"
            android:text="Mittwoch"
            android:background="@color/transparent"
            android:textColor="@color/color3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/button04"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/button03"
            android:onClick="layoutClicked"
            android:text="Donnerstag"
            android:background="@color/transparent"
            android:textColor="@color/color3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/button05"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/button04"
            android:onClick="layoutClicked"
            android:text="Freitag"
            android:background="@color/transparent"
            android:textColor="@color/color3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

